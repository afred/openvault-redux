<div class="datastream primary-datastream datastream-video datastream-video-mp4">
  <%= render_video_player(datastream_url(document.fedora_object.datastream["Video.mp4"]), :size => "320x240", :controls => true, :poster => document.thumbnail.url(:style => :preview)) %>
</div>

<div class="secondary-datastream-container">
<div class="datastream secondary-datastream datastream-transcript datastream-transcript-newsml-xml">
  <%= render_newsml_transcript(datastream_url(document.fedora_object.datastream["Transcript.newsml.xml"], :private => true)) %>
</div>
</div>
