<div class="datastream primary-datastream datastream-audio datastream-audio-mp3">
  <%= render_audio_player(datastream_url(document.fedora_object.datastream["Audio.mp3"]), :controls => true, :poster => document.thumbnail.url(:style => :preview)) %>
</div>

<div class="secondary-datastream-container">
<div class="datastream secondary-datastream datastream-transcript datastream-transcript-tei-xml">
  <%= render_tei_transcript(datastream_url(document.fedora_object.datastream["Transcript.tei.xml"], :private => true)) %>
</div>
</div>
